 
 
 

{
  "functions": {
    "source": "backend",
    "runtime": "nodejs22"
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "functions": { "host": "127.0.0.1", "port": 5001 },
    "hosting": { "host": "127.0.0.1", "port": 5000 },
    "ui": { "host": "127.0.0.1", "port": 4000 }
  }
}
